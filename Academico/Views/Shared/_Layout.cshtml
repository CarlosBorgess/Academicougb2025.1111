<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acadêmico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Academico.styles.css" asp-append-version="true" />

    <style>
        /* Fundo geral azul claro */
        body {
            background: linear-gradient(180deg, #e6f0ff 0%, #ffffff 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar moderna */
        .navbar {
            background-color: #0056b3 !important;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #d0e7ff !important;
            }

        /* Container principal */
        main {
            flex: 1;
        }

        /* Rodapé fixado */
        footer {
            background-color: #004a99;
            color: white;
            text-align: center;
            padding: 15px 0;
            font-size: 0.9rem;
            margin-top: auto;
        }

            footer a {
                color: #b3d4ff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                    color: white;
                }

        /* Títulos */
        h1.display-4 {
            color: #003366;
            font-weight: 600;
        }

        /* Texto de boas-vindas */
        p {
            color: #003366;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Acadêmico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Test">TestMenu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Aluno" asp-action="Index">Aluno</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Departamento" asp-action="Index">Departamento</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Instituicao" asp-action="Index">Instituicao</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container text-center mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; 2025 - Acadêmico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
